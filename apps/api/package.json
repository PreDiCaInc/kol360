{
  "name": "@kol360/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "cd ../.. && pnpm --filter @kol360/shared build && cd apps/api && prisma generate && tsc",
    "build:lambda": "cd ../.. && pnpm --filter @kol360/shared build && cd apps/api && prisma generate && tsc && node scripts/bundle-lambda.js",
    "start": "node dist/index.js",
    "start:migrate": "node dist/index.js",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.948.0",
    "@aws-sdk/client-ses": "^3.953.0",
    "@aws-sdk/credential-providers": "^3.953.0",
    "@fastify/aws-lambda": "^6.1.1",
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/multipart": "^8.3.1",
    "@fastify/rate-limit": "^9.0.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@kol360/shared": "workspace:*",
    "@prisma/client": "^5.14.0",
    "aws-jwt-verify": "^4.0.0",
    "exceljs": "^4.4.0",
    "fastify": "^4.27.0",
    "fastify-plugin": "^4.5.0",
    "pino": "^10.1.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.27.1",
    "pino-pretty": "^11.3.0",
    "prisma": "^5.14.0",
    "tsx": "^4.10.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.16"
  }
}
